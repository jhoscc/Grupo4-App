<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/top" >
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/topmusica"
        android:src="@drawable/musica"
        android:onClick="onSelectFragment"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/topfutbol"
        android:src="@drawable/futbol"
        android:onClick="onSelectFragment"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/topcine"
        android:src="@drawable/pelicula"
        android:onClick="onSelectFragment"/>
    </LinearLayout>

</LinearLayout>